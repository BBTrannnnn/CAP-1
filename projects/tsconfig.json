{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "types": ["expo-router/types", "react", "react-native"],
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "Documents",
    "**/Documents/**"
  ]
}
